<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="75dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/neuro"
                android:gravity="center_vertical"
                android:shadowColor="#FFFFFF"
                android:shadowRadius="5"
                android:text="Welcome to\nThe Futurastic World."
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/box1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40dp"
                android:background="@drawable/custom_input2"
                android:elevation="100dp"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/two"
                android:outlineSpotShadowColor="@color/two"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.cardview.widget.CardView

                    android:id="@+id/cardv"
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:background="@color/bg"
                    android:backgroundTint="@color/bg"
                    android:transitionName="c1"
                    app:cardBackgroundColor="@color/bg"
                    app:cardCornerRadius="30dp">

                    <ImageButton
                        android:id="@+id/imageButton1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_shadow"
                        android:cropToPadding="false"
                        android:scaleType="fitXY"
                        android:transitionName="imageTransition"
                        app:srcCompat="@drawable/car"
                        tools:ignore="ContentDescription" />

                    <LinearLayout

                        android:id="@+id/linbox1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/lin"
                        android:orientation="vertical"
                        android:transitionName="l1">

                        <TextView
                            android:id="@+id/main1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0"
                            android:fontFamily="@font/neuro"
                            android:text="Futurastic Cars"
                            android:textColor="#FFFFFF"
                            android:transitionName="nameTransition"
                            tools:ignore="TextContrastCheck" />

                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0"
                            android:fontFamily="@font/poppins_light"
                            android:text="The basic principles of the very first cars are still used today. One of the main differences is ........"
                            android:textColor="#D3FFFFFF"
                            android:textSize="10sp"
                            android:transitionName="descTransition"
                            tools:ignore="TextContrastCheck" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/box2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:background="@drawable/custom_input2"
                android:elevation="100dp"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/two"
                android:outlineSpotShadowColor="@color/two"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.cardview.widget.CardView

                    android:id="@+id/cardv2"
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:transitionName="c2"
                    app:cardCornerRadius="30dp">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_shadow"
                        android:cropToPadding="false"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/city"
                        tools:ignore="ContentDescription" />

                    <LinearLayout

                        android:id="@+id/linbox2"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/lin"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/main2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0"
                            android:fontFamily="@font/neuro"
                            android:text="Futurastic City"
                            android:textColor="#FFFFFF"
                            tools:ignore="TextContrastCheck" />

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0"
                            android:fontFamily="@font/poppins_light"
                            android:text="n the future, cities may see flying vehicles, mega bridges, super-connected street experiences, and ......."
                            android:textColor="#D3FFFFFF"
                            android:textSize="10sp"
                            tools:ignore="TextContrastCheck" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/box3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40dp"
                android:background="@drawable/custom_input2"
                android:elevation="100dp"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/two"
                android:outlineSpotShadowColor="@color/two"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.cardview.widget.CardView

                    android:id="@+id/cardv3"
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:transitionName="c3"
                    app:cardCornerRadius="30dp">

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_shadow"
                        android:cropToPadding="false"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/robot"
                        tools:ignore="ContentDescription" />

                    <LinearLayout

                        android:id="@+id/linbox3"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/lin"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/main3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0"
                            android:fontFamily="@font/neuro"
                            android:text="Futurastic Robots"
                            android:textColor="#FFFFFF"
                            tools:ignore="TextContrastCheck" />

                        <TextView
                            android:id="@+id/txt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0"
                            android:fontFamily="@font/poppins_light"
                            android:text="Ameca, The World's Most Advanced, Most Realistic Humanoid Robot. Developed by Engineered ...... "
                            android:textColor="#D3FFFFFF"
                            android:textSize="10sp"
                            tools:ignore="TextContrastCheck" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/box4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40dp"
                android:background="@drawable/custom_input2"
                android:elevation="100dp"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/two"
                android:outlineSpotShadowColor="@color/two"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.cardview.widget.CardView

                    android:id="@+id/cardv4"
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:transitionName="c4"
                    app:cardCornerRadius="30dp">

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_shadow"
                        android:cropToPadding="false"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/tech2"
                        tools:ignore="ContentDescription" />

                    <LinearLayout

                        android:id="@+id/linbox4"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/lin"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/main4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0"
                            android:fontFamily="@font/neuro"
                            android:text="Futurastic Technology"
                            android:textColor="#FFFFFF"
                            tools:ignore="TextContrastCheck" />

                        <TextView
                            android:id="@+id/txt4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0"
                            android:fontFamily="@font/poppins_light"
                            android:text="Last year saw foldable smart devices, alien-looking concept cars, updates on highly antici......"
                            android:textColor="#D3FFFFFF"
                            android:textSize="10sp"
                            tools:ignore="TextContrastCheck" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/tei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="75dp"
                android:layout_marginBottom="150dp"
                android:fontFamily="@font/neuro"
                android:shadowColor="#FFFFFF"
                android:shadowRadius="5"
                android:text="The Expensive Informatics"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>